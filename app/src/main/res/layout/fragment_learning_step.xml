<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardBackgroundColor="@color/primaryColor"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="0.7dp"
>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <ImageView android:layout_width="0dp" android:layout_height="0dp"
                   android:id="@+id/learningStepImage"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   tools:srcCompat="@drawable/ic_learning_step_1"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toTopOf="@+id/learningStepDesc"
                   app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/learningStepDesc"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:text="@string/step_desc_1" android:textSize="28sp"
                  android:fontFamily="@font/architects_daughter"
                  android:textAlignment="center" android:textColor="@android:color/black" android:padding="8dp"
                  android:textStyle="italic"
                  app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>